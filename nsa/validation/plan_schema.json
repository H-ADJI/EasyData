{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "SCRAPING PLAN SCHEMA",
    "description": "Json schema to validate and generate the necessary fields when creating a scraping plan ",
    "type": "object",
    "properties": {
        "description": {
            "type": "string",
            "description": "A description about the complete flow of actions taken to extract data and automate browser interactions"
        },
        "concurrency_field": {
            "type": "string"
        },
        "interactions": {
            "type": "array",
            "title": "interactions",
            "additionalItems": false,
            "minItems": 1,
            "items": {
                "title": "actions",
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "description": {
                        "type": "string"
                    },
                    "do_once": {
                        "type": "string",
                        "enum": [
                            "click",
                            "visit_page",
                            "scrape_page"
                        ]
                    },
                    "do_many": {
                        "type": "string"
                    },
                    "inputs": {
                        "type": "object"
                    },
                    "for": {
                        "type": "integer"
                    },
                    "for_each": {
                        "type": "string"
                    },
                    "interactions": {
                        "type": "array"
                    },
                    "condition": {
                        "type": "object",
                        "properties": {
                            "elements_selector": {
                                "type": "string"
                            }
                        }
                    }
                },
                "required": [
                    "description"
                ],
                "oneOf": [
                    {
                        "required": [
                            "do_once"
                        ]
                    },
                    {
                        "required": [
                            "do_many",
                            "for",
                            "interactions"
                        ]
                    },
                    {
                        "required": [
                            "do_many",
                            "for_each",
                            "interactions"
                        ]
                    },
                    {
                        "required": [
                            "do_until",
                            "condition",
                            "interactions"
                        ]
                    }
                ],
                "dependentSchemas": {
                    "do_once": {
                        "properties": {
                            "inputs": {
                                "type": "object"
                            }
                        },
                        "if": {
                            "properties": {
                                "do_once": {
                                    "const": "scrape_page"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "inputs": {
                                    "type": "object",
                                    "properties": {
                                        "selectors": {
                                            "type": "array"
                                        },
                                        "data_to_get": {
                                            "minItems": 1,
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "properties": {
                                                    "kind": {
                                                        "type": "string",
                                                        "enum": [
                                                            "nested_field",
                                                            "generated_field",
                                                            "text",
                                                            "attribute"
                                                        ]
                                                    },
                                                    "field_alias": {
                                                        "description": "The the name of the key for the output data",
                                                        "type": "string"
                                                    },
                                                    "relocate": {
                                                        "type": "array",
                                                        "description": "xpath / css selectors that allow to relocate into a sub-element of the current element-tree"
                                                    },
                                                    "find_all": {
                                                        "description": "extract all matched elements as a list or just one",
                                                        "type": "boolean"
                                                    },
                                                    "name": {
                                                        "type": "array",
                                                        "description": "attribute name to extract"
                                                    }
                                                },
                                                "if": {
                                                    "properties": {
                                                        "kind": {
                                                            "const": "attribute"
                                                        }
                                                    }
                                                },
                                                "then": {
                                                    "required": [
                                                        "name"
                                                    ]
                                                },
                                                "required": [
                                                    "field_alias"
                                                ]
                                            }
                                        }
                                    },
                                    "required": [
                                        "data_to_get",
                                        "selectors"
                                    ]
                                }
                            },
                            "required": [
                                "inputs"
                            ]
                        },
                        "else": {
                            "if": {
                                "properties": {
                                    "do_once": {
                                        "const": "click"
                                    }
                                }
                            },
                            "then": {
                                "properties": {
                                    "inputs": {
                                        "type": "object",
                                        "properties": {
                                            "selectors": {
                                                "type": "array"
                                            },
                                            "count": {
                                                "type": "integer",
                                                "minimum": 1,
                                                "default": 1
                                            }
                                        },
                                        "required": [
                                            "selectors"
                                        ]
                                    }
                                },
                                "required": [
                                    "inputs"
                                ]
                            },
                            "else": {
                                "if": {
                                    "properties": {
                                        "do_once": {
                                            "const": "visit_page"
                                        }
                                    }
                                },
                                "then": {
                                    "properties": {
                                        "inputs": {
                                            "type": "object",
                                            "properties": {
                                                "url": {
                                                    "type": "string"
                                                }
                                            },
                                            "required": [
                                                "url"
                                            ]
                                        }
                                    },
                                    "required": [
                                        "inputs"
                                    ]
                                },
                                "else": {
                                    "if": {
                                        "properties": {
                                            "do_once": {
                                                "const": "use_keyboard"
                                            }
                                        }
                                    },
                                    "then": {
                                        "properties": {
                                            "inputs": {
                                                "type": "object",
                                                "properties": {
                                                    "selectors": {
                                                        "type": "array",
                                                        "items": {
                                                            "type": "string"
                                                        }
                                                    },
                                                    "delay": {
                                                        "type": "integer",
                                                        "default": 0,
                                                        "minimum": 0
                                                    },
                                                    "keys": {
                                                        "type": "array",
                                                        "items": {
                                                            "type": "string"
                                                        }
                                                    }
                                                },
                                                "required": [
                                                    "keys",
                                                    "selectors"
                                                ]
                                            }
                                        },
                                        "required": [
                                            "inputs"
                                        ]
                                    },
                                    "else": {
                                        "if": {
                                            "properties": {
                                                "do_once": {
                                                    "const": "wait_for"
                                                }
                                            }
                                        },
                                        "then": {
                                            "properties": {
                                                "inputs": {
                                                    "type": "object",
                                                    "properties": {
                                                        "event": {
                                                            "type": "string",
                                                            "enum": [
                                                                "load",
                                                                "domcontentloaded",
                                                                "networkidle"
                                                            ]
                                                        },
                                                        "state": {
                                                            "type": "string",
                                                            "enum": [
                                                                "attached",
                                                                "detached",
                                                                "visible",
                                                                "hidden"
                                                            ]
                                                        },
                                                        "duration": {
                                                            "type": "integer",
                                                            "default": 0,
                                                            "minimum": 0
                                                        },
                                                        "timeout": {
                                                            "type": "integer",
                                                            "default": 10000,
                                                            "minimum": 0
                                                        }
                                                    },
                                                    "oneOf": [
                                                        {
                                                            "required": [
                                                                "event"
                                                            ]
                                                        },
                                                        {
                                                            "required": [
                                                                "state"
                                                            ]
                                                        },
                                                        {
                                                            "required": [
                                                                "duration"
                                                            ]
                                                        }
                                                    ]
                                                }
                                            },
                                            "required": [
                                                "inputs"
                                            ]
                                        }
                                    }
                                }
                            }
                        },
                        "not": {
                            "anyOf": [
                                {
                                    "required": [
                                        "interactions"
                                    ]
                                },
                                {
                                    "required": [
                                        "for"
                                    ]
                                },
                                {
                                    "required": [
                                        "for_each"
                                    ]
                                },
                                {
                                    "required": [
                                        "condition"
                                    ]
                                }
                            ]
                        }
                    },
                    "do_many": {
                        "properties": {
                            "for": {
                                "type": "integer"
                            },
                            "interactions": {
                                "type": "array",
                                "$ref": "#/properties/interactions"
                            }
                        },
                        "required": [
                            "interactions"
                        ],
                        "oneOf": [
                            {
                                "required": [
                                    "for",
                                    "interactions"
                                ]
                            },
                            {
                                "required": [
                                    "for_each",
                                    "interactions"
                                ]
                            }
                        ],
                        "not": {
                            "required": [
                                "inputs"
                            ]
                        }
                    },
                    "do_until": {
                        "properties": {
                            "condition": {
                                "type": "object",
                                "properties": {
                                    "elements_selector": {
                                        "type": "string"
                                    }
                                }
                            },
                            "interactions": {
                                "type": "array",
                                "$ref": "#/properties/interactions"
                            }
                        }
                    }
                }
            }
        }
    }
}