{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "SCRAPING PLAN SCHEMA",
    "description": "Json schema to validate and generate the necessary fields when creating a scraping plan ",
    "type": "object",
    "required": [
        "fo"
    ],
    "properties": {
        "fo": {
            "type": "string"
        },
        "bar": {
            "type": "string"
        },
        "test": {
            "type": "string"
        }
    },
    "if": {
        "properties": {
            "fo": {
                "const": "fo"
            }
        }
    },
    "then": {
        "required": [
            "bar"
        ]
    },
    "else": {
        "if": {
            "properties": {
                "fo": {
                    "const": "bar"
                }
            }
        },
        "then": {
            "required": [
                "test"
            ]
        }
    }
}